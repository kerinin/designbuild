<% if @unit_cost_estimate.errors.any? %>
  //Error
  
  <% content_for :error_tr do %>
    <tr class='error'><td colspan = 10><strong><%= error_messages_for(@unit_cost_estimate) %></strong></td></tr>
  <% end %>

  //Hide the flash notice div
  $("#flash_notice").hide(300);

  //Add a table row above the input with error info
  $("tr.error").remove();
  $("tr.unit_cost_estimate_fields").before("<%= escape_javascript( yield :error_tr ) %>");

<% else %>
  //Success
  
  location.reload();
  
<% end %>
