%table.deadlines
  %tr
    %th Name
    %th
    %th Date
    %th Tasks
    %th.control
    %th.control

  - deadlines.each do |deadline|
    %tr{:id => "deadline_#{deadline.id}"}
      %td{:colspan => 2}
        = deadline.name
      %td= deadline.date.to_s :long
      %td=raw( deadline.tasks.map {|t| link_to t.name, [@project, t]}.join(',') )
      %td.control.edit= link_to 'Edit', edit_project_deadline_path(@project, deadline), :remote => true
      %td.control.destroy= link_to icon(:delete), [@project, deadline], :confirm => 'Are you sure?', :method => :delete

  - if deadlines.empty?
    %tr
      %td{:colspan => 10} (None)
      
  %tr.control.add_button
    %td{:colspan => 10}
      = link_to new_project_deadline_path(@project), :remote => true do
        = icon :add
        Add Deadline
      
