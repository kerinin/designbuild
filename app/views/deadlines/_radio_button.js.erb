$('#deadline_type_absolute').click( function() {
  $('.absolute_deadline_input input, .absolute_deadline_input select, .absolute_deadline_input label').attr('disabled', false);
  $('.relative_deadline_input input, .relative_deadline_input select, .relative_deadline_input label').attr('disabled', true);
  $('#deadline_parent_deadline_id, #deadline_interval').val(null);
});

$('#deadline_type_relative').click( function() {
  $('.absolute_deadline_input input, .absolute_deadline_input select, .absolute_deadline_input label').attr('disabled', true);
  $('.relative_deadline_input input, .relative_deadline_input select, .relative_deadline_input label').attr('disabled', false);
});

