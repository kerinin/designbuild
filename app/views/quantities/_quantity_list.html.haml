%table
  %tr
    %th Name
    %th
    %th.number Value
    %th Unit
    %th.number Drop
    %th.control
    %th.control
    %th.control
    %th.control

  - quantities.each do |quantity|
    %tr
      %td{:colspan => 2}= quantity.name
      %td= quantity.value
      %td= quantity.unit
      %td= number_to_percentage(quantity.drop )
      %td= link_to 'New Derived', new_component_derived_quantity_path(quantity, :parent_quantity_id => quantity.id)
      %td= link_to 'Show', [component, quantity]
      %td= link_to 'Edit', edit_component_quantity_path(component, quantity)
      %td= link_to 'Destroy', [component, quantity], :confirm => 'Are you sure?', :method => :delete
    - quantity.derived_quantities.each do |derived_quantity|
      %tr
        %td
        %td
          &uarr;
          ( x
          =derived_quantity.multiplier
          )
          = derived_quantity.name
        %td= derived_quantity.value
        %td= quantity.unit
        %td
        %td
        %td= link_to 'Show', [component, quantity]
        %td= link_to 'Edit', edit_component_quantity_path(component, quantity)
        %td= link_to 'Destroy', [component, quantity], :confirm => 'Are you sure?', :method => :delete  
        
  - if quantities.empty?
    %tr
      %td{:colspan => 10} (None)
      