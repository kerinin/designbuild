= form_for [@component, @quantity] do |f|
  -if @quantity.errors.any?
    #error_explanation
      %h2= "#{pluralize(@quantity.errors.count, "error")} prohibited this quantity from being saved:"
      %ul
        - @quantity.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :value
    = f.text_field :value
  .field
    = f.label :unit
    = f.text_field :unit
  .actions
    = f.submit 'Save'
