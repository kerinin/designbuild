= form_for @resource_request do |f|
  -if @resource_request.errors.any?
    #error_explanation
      %h2= "#{pluralize(@resource_request.errors.count, "error")} prohibited this resource_request from being saved:"
      %ul
        - @resource_request.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :urgent
    = f.check_box :urgent
  .field
    = f.label :first_date
    = f.date_select :first_date
  .field
    = f.label :deadline
    = f.date_select :deadline
  .field
    = f.label :duration
    = f.text_field :duration
  .field
    = f.label :allocated
    = f.text_field :allocated
  .field
    = f.label :remaining
    = f.text_field :remaining
  .actions
    = f.submit 'Save'
