-remote ||= nil
= form_for [@project, @laborer], :remote => remote do |f|
  -if @laborer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@laborer.errors.count, "error")} prohibited this laborer from being saved:"
      %ul
        - @laborer.errors.full_messages.each do |msg|
          %li= msg

  %h1
    .field
      = f.label :name
      = f.text_field :name
      
  .field
    = f.label :pay_rate
    = f.text_field :pay_rate
  .field
    = f.label :bill_rate
    = f.text_field :bill_rate
  .actions
    .submit= f.submit 'Save'
