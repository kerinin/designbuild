%html

  %head
    %title='Design/Build'
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery.qtip.min.js'
    = csrf_meta_tag
    
    = javascript_tag render( :partial => 'shared/qtips.js')
    = javascript_tag render( :partial => 'shared/ajax_status.js')
    
    = yield :head
    
  %body.bp.two-col
    -if notice
      %p.notice= notice
    -else
      %p.notice.hidden
    -if alert
      %p.alert= alert
    -else
      %p.alert.hidden
      
    #failure.error.hidden
      =icon :exclamation
      Something went wrong!  Try <a href="#" onclick="location.reload();">reloading the page</a>
      
    #loading.notice.hidden
      =image_tag 'spinner_small.gif'
      Working...
    
    #post_errors
    = yield
