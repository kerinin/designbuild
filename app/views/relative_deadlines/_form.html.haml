= form_for [@deadline, @relative_deadline] do |f|
  -if @relative_deadline.errors.any?
    #error_explanation
      %h2= "#{pluralize(@relative_deadline.errors.count, "error")} prohibited this relative_deadline from being saved:"
      %ul
        - @relative_deadline.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :interval
    = f.text_field :interval
  .actions
    = f.submit 'Save'
