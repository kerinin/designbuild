<% if @relative_deadline.errors.any? %>

  <% content_for :error_tr do %>
    <tr class='error'><td colspan = 10><strong><%= error_messages_for(@relative_deadline) %></strong></td></tr>
  <% end %>

  //Hide the flash notice div
  $("#flash_notice").hide(300);

  //Add a table row above the input with error info
  $("tr.error").remove();
  $("tr.relative_deadline_fields").before("<%= escape_javascript( yield :error_tr ) %>");

<% else %>

  <% content_for :table do %>
  	<%=render :partial => 'deadlines/deadline_list', :locals => {:deadlines => @project.deadlines} %>
  <% end %>

  //Update the html of the div flash_notice with the new one
  $("#flash_notice").html("<%= escape_javascript(flash[:notice])%>");

  //Show the flash_notice div
  $("#flash_notice").show(300);

  //Replace the html of the div post_lists with the updated new one
  $('form.new_relative_deadline').html( "<%= escape_javascript( yield :table ) %>");

  //Remove the form
  $('table.deadlines').unwrap();
  
  //Load a new entry field
  $('#add_relative_to_<%= @deadline.id %>').click();
  
<% end %>
