<% content_for :wrapping_form do %>
	<%= form_for [@project, @component], :remote => true do |f|  %>
		<% content_for :tr do %>
			<%= render :partial => 'form_tr', :locals => {:f => f} %>
		<% end %>
	<% end %>
<% end %>

<% content_for :cancel_link do %>
  <% if @component.is_root? %>
    <%= link_to( 'Cancel', project_components_path(@project) ) %>
  <% else %>
    <%= link_to( 'Cancel', [@project, @component.parent] ) %>
  <% end %>
<% end %>

form = $("<%= escape_javascript( yield :wrapping_form) %>")
contents = form.children().detach();

$("table.components").wrap(form).append(contents);
$("table.components tr.add_button").before("<%= escape_javascript( yield :tr ) %>");
$("table.components tr.component_fields > td.control").append("or <%= escape_javascript yield :cancel_link %>")
$("table.components tr.add_button").hide();
$("table.components td.control.edit > a").contents().unwrap();
$("input:text:visible:first").focus();
