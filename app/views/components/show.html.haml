%p#notice= notice

=render :partial => 'shared/breadcrumbs', :locals => {:ancestors => [@project] + @component.ancestors}

%h1= @component.name
%p
	$
	= @component.estimated_cost
	(estimated)

= link_to 'Edit', edit_project_component_path(@project, @component)
\|
= link_to 'Back', project_components_path(@project)

%h2 Quantities
=render :partial => 'quantities/quantity_list', :locals => {:quantities => @component.quantities, :component => @component}

%h2 Estimated Costs
=render :partial => 'unit_cost_estimates/unit_cost_estimate_list', :locals => {:unit_cost_estimates => @component.unit_cost_estimates}
=render :partial => 'fixed_cost_estimates/fixed_cost_estimate_list', :locals => {:fixed_cost_estimates => @component.fixed_cost_estimates}

%h2 Sub-Components
=render :partial => 'component_list', :locals => {:components => @component.children}


