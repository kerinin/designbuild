= form_for [@parent_object, @markup] do |f|
  -if @markup.errors.any?
    #error_explanation
      %h2= "#{pluralize(@markup.errors.count, "error")} prohibited this markup from being saved:"
      %ul
        - @markup.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :percent
    = f.text_field :percent
  .actions
    = f.submit 'Save'
