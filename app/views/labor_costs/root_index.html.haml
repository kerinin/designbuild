=render :partial => 'shared/project_nav', :locals => {:current => :tasks}

.container
  .header
    %h1 Labor
  
    .main_actions.inline
      View by:
      =link_to 'Project/Task', url_for(:by => 'project')
      =link_to 'Employee', url_for(:by => 'employee')
      =link_to 'Date/Time', url_for(:by => 'date')
      
  %hr
  
  .left.labor_nav
    %ul.grouper.by_project
      -@projects.all.each do |project|
        %li{:id => "project_group_#{project.id}"}
          %h2=project.name
          %ul.group
            -project.tasks.all.each do |task|
              %li
                =link_to task.name, labor_costs_path(:by => params[:by], :project_id => project.id, :task_id => task.id), :remote => true
                =number_to_currency task.raw_labor_cost
            
  .right.labor_costs
    Date, Person, Time
    
    
=javascript_include_tag 'labor.js'