-@component = @contract.component
=render :partial => 'shared/project_nav', :locals => {:current => :components}

.container
  = render :partial => 'components/nav', :locals => {:current => :costs}

  %h1
    Fixed-Bid Contract: 
    = @contract.name

  -unless @contract.bids.empty?
    %h2
      Bid:
      = number_to_currency @contract.estimated_raw_cost
      =form_for [@project, @contract] do |f|
        = f.collection_select(:bid_id, @contract.bids, :id, :select_label, { :include_blank => "-- No Active Bid --" }, :onchange =>"$('#edit_contract_#{@contract.id}').submit();")

  .left

    %h2 Bids

    =render :partial => 'bids/bid_list', :locals => {:bids => @contract.bids}

    .control.add_button
      =link_to new_contract_bid_path(@contract), :remote => true do
        %button
          = icon(:add)
          Add Bid

  .right        

    %h2 Invoices

    =render :partial => 'contract_costs/contract_costs_list', :locals => {:contract_costs => @contract.costs}

    .control.add_button
      =link_to new_contract_contract_cost_path(@contract), :remote => true do
        %button 
          =icon :add
          Add Invoice