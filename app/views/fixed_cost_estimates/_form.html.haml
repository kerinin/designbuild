    #error_explanation
      %h2= "#{pluralize(@fixed_cost_estimate.errors.count, "error")} prohibited this fixed_cost_estimate from being saved:"
      %ul
        - @fixed_cost_estimate.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :cost
    = f.text_field :cost
  .actions
    = f.submit 'Save'
