-allocation ||= nil

.allocation{:class => [request.project.color.nil? ? "project_color_#{1+(request.project_id % 5)}" : "project_color_#{request.project.color}", template ? 'insertion_content' : nil], :id => allocation.nil? ? nil : "allocation_#{allocation.id}"}
  %strong=request.project.name
  =request.task.name unless request.task.blank?
  -unless allocation.nil?
    .delete
      =link_to 'Delete', allocation, :method => :delete, :remote => true